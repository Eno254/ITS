@model ITS.Models.Issue

<style>
    :root {
        --background-image: url('../images/crescent_moon_in_starry_sky-wallpaper-1920x1080.jpg'); /* Adjusted path */
        --form-bg: rgba(255, 255, 255, 0.9);
        --label-color: #555;
        --input-border: #ced4da;
        --input-focus-border: #80bdff;
        --button-bg: #007bff;
        --button-bg-hover: #0056b3;
        --secondary-bg: #6c757d;
        --secondary-bg-hover: #5a6268;
        --text-color: #333;
    }

    body {
        background-image: var(--background-image);
        font-family: Arial, sans-serif;
        background-size: cover;
        background-position: center;
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    h2 {
        color: var(--text-color);
        text-align: center;
    }

    form {
        background-color: var(--form-bg);
        padding: 20px;
        border-radius: 8px; /* Slightly more rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Stronger shadow */
        max-width: 500px;
        width: 100%;
        margin: 20px;
        transition: box-shadow 0.3s ease; /* Smooth shadow transition */
    }

        form:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
        }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: var(--label-color);
    }

    input[type="text"],
    textarea,
    select,
    input[type="date"] {
        width: 100%;
        padding: 10px;
        border: 1px solid var(--input-border);
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s ease; /* Smooth border transition */
    }

        input[type="text"]:focus,
        textarea:focus,
        select:focus,
        input[type="date"]:focus {
            border-color: var(--input-focus-border);
            outline: none;
        }

    button {
        background-color: var(--button-bg);
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease; /* Smooth background transition */
    }

        button:hover {
            background-color: var(--button-bg-hover);
        }

    span {
        color: red;
        font-size: 0.875em;
    }

    /* Optional: Style for the back button */
    .btn-secondary {
        display: block;
        margin: 20px auto;
        text-align: center;
        padding: 10px 15px;
        background-color: var(--secondary-bg);
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease; /* Smooth background transition */
    }

        .btn-secondary:hover {
            background-color: var(--secondary-bg-hover);
        }
 
</style>
<body>
<h2>Create Issue</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" required />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label>Description</label>
        <textarea asp-for="Description" required></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Status</label>
        <select asp-for="Status" required>
            <option value="">Select Status</option>
            <option value="Open">Open</option>
            <option value="In Progress">In Progress</option>
            <option value="Resolved">Resolved</option>
            <option value="Closed">Closed</option>
        </select>
        <span asp-validation-for="Status"></span>
    </div>
    
    <button type="submit">Create Issue</button>
</form>

<a href="/Issues/Index" class="btn btn-secondary">Back to Issues</a>
</body>