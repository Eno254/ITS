@model ITS.Models.Issue


<style>
    body {
        background-image: url('../images/crescent_moon_in_starry_sky-wallpaper-1920x1080.jpg'); /* Ensure the path is correct */
        font-family: Arial, sans-serif;
        background-size: cover; /* Cover the entire page */
        background-position: center; /* Center the background image */
        margin: 0; /* Remove default margin */
        height: 100vh; /* Full height of the viewport */
        display: flex; /* Use flexbox to center the content */
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9); /* White background with slight transparency */
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Slightly stronger shadow */
        max-width: 500px; /* Limit the width of the container */
        width: 100%; /* Make it responsive */
        text-align: center; /* Center text */
    }

    h2 {
        color: #333;
    }

    p {
        color: #555; /* Darker gray for text */
        margin-bottom: 20px; /* Space below the paragraph */
    }

    button {
        background-color: #dc3545; /* Bootstrap danger color */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        width: 100%; /* Full width button */
        margin-bottom: 10px; /* Space below the button */
    }

        button:hover {
            background-color: #c82333; /* Darker on hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Bootstrap secondary color */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        width: 100%; /* Full width button */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker on hover */
        }
</style>
<body>

<div class="container">
    <h2>Delete Issue</h2>
    <p>Are you sure you want to delete the issue titled "<strong>@Model.Title</strong>"?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</body>